QUES 1:
#include <iostream>
#include <string>

int main() {
    std::string str1, str2, concatenatedString;

    std::cout << "Enter the first string: ";
    std::cin >> str1;
    
    std::cout << "Enter the second string: ";
    std::cin >> str2;
    
    concatenatedString = str1 + str2;

    std::cout << "Concatenated string: " << concatenatedString << std::endl;

    return 0;
}


QUES 2:
#include <iostream>

int main() {
    int grade1, grade2, grade3, grade4, grade5;
    double average;

    std::cout << "Enter grade 1: ";
    std::cin >> grade1;
    
    std::cout << "Enter grade 2: ";
    std::cin >> grade2;
    
    std::cout << "Enter grade 3: ";
    std::cin >> grade3;
    
    std::cout << "Enter grade 4: ";
    std::cin >> grade4;
    
    std::cout << "Enter grade 5: ";
    std::cin >> grade5;
    
    average = (grade1 + grade2 + grade3 + grade4 + grade5) / 5.0;

    std::cout << "The average grade is: " << average << std::endl;

    return 0;
}



QUES 3:
#include <iostream>

int main() {
    int num, square;

    std::cout << "Enter a number: ";
    std::cin >> num;
    
    square = num * num;

    std::cout << "The square of " << num << " is: " << square << std::endl;

    return 0;
}



