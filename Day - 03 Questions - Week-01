ques 1:
#include <iostream>

int main() {
    int N, sum = 0;

    std::cout << "Enter a number: ";
    std::cin >> N;

    for (int i = 1; i <= N; ++i) {
        sum += i;
    }

    std::cout << "The sum of the first " << N << " natural numbers is: " << sum << std::endl;

    return 0;
}


ques 2:
#include <iostream>

int main() {
    int N, factorial = 1;

    std::cout << "Enter a number: ";
    std::cin >> N;

    for (int i = 1; i <= N; ++i) {
        factorial *= i;
    }

    std::cout << "The factorial of " << N << " is: " << factorial << std::endl;

    return 0;
}


ques 3:
#include <iostream>

int main() {
    int N;

    std::cout << "Enter a number: ";
    std::cin >> N;

    std::cout << "Multiplication table of " << N << ":" << std::endl;
    
    for (int i = 1; i <= 10; ++i) {
        std::cout << N << " x " << i << " = " << N * i << std::endl;
    }

    return 0;
}
